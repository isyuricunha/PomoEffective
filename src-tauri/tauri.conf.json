{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "YuPomo",
    "version": "0.1.30"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APPDATA/pomodoro-settings.json",
          "$APPDATA/pomodoro-history.json"
        ]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/isyuricunha/YuPomo/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwQjIzMjBDODUwNkMyN0YKUldSL3dnYUZEREt5Z01pbVo2U1phdFczWThkd3A0ZkhZVk1jaktDbWQxWWEzeUM0czJYTGJnMkcK"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.yupomo.app",
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/android-chrome-192x192.png",
        "icons/android-chrome-512x512.png",
        "icons/apple-touch-icon.png",
        "icons/favicon-16x16.png",
        "icons/favicon-32x32.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "YuPomo",
        "width": 400,
        "height": 600,
        "minWidth": 350,
        "minHeight": 500
      }
    ]
  }
}
