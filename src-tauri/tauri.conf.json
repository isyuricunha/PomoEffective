{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Pomodoro App",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPDATA/pomodoro-settings.json", "$APPDATA/pomodoro-history.json"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.pomodoro.app",
      "icon": [
        "icons/32x32.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Pomodoro App",
        "width": 400,
        "height": 600,
        "minWidth": 350,
        "minHeight": 500
      }
    ]
  }
}
